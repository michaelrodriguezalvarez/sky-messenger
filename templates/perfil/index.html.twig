{% extends 'base.html.twig' %}

{% block title %}Perfil index{% endblock %}

{% block body %}
    <h1>Perfil index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nick</th>
                <th>Nombre</th>
                <th>Apellidos</th>
                <th>Direccion</th>
                <th>Telefono</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for perfil in perfils %}
            <tr>
                <td>{{ perfil.id }}</td>
                <td>{{ perfil.nick }}</td>
                <td>{{ perfil.nombre }}</td>
                <td>{{ perfil.apellidos }}</td>
                <td>{{ perfil.direccion }}</td>
                <td>{{ perfil.telefono }}</td>
                <td>
                    <a href="{{ path('perfil_show', {'id': perfil.id}) }}">show</a>
                    <a href="{{ path('perfil_edit', {'id': perfil.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('perfil_new') }}">Create new</a>
{% endblock %}
