{% extends 'base.html.twig' %}

{% block title %}Perfil{% endblock %}

{% block body %}
    <h1>Perfil</h1>

    <table class="table">
        <tbody>           
            <tr>
                <th>Nick</th>
                <td>{{ perfil.nick }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ perfil.nombre }}</td>
            </tr>
            <tr>
                <th>Apellidos</th>
                <td>{{ perfil.apellidos }}</td>
            </tr>
            <tr>
                <th>Direccion</th>
                <td>{{ perfil.direccion }}</td>
            </tr>
            <tr>
                <th>Telefono</th>
                <td>{{ perfil.telefono }}</td>
            </tr>
            <tr>
                <th>Sexo</th>
                <td>{{ perfil.sexo }}</td>
            </tr>
            <tr>
                <th>Correo</th>
                <td>{{ perfil.usuario.email }}</td>
            </tr>
        </tbody>
    </table>

    {% if current_user_id == perfil.usuario.id %}
        <a href="{{ path('perfil_edit', {'id': perfil.id}) }}">Editar</a>
    {% endif %}
    
{% endblock %}
